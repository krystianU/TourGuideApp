<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_object_name_min_height"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

    <TextView
        android:id="@+id/object_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="Starka"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:padding="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_object_street_min_height"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_room_black_24dp"/>

    <TextView
        android:id="@+id/object_street_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_object_street_min_height"
        tools:text="JÃ³zefa 14"
        android:textAppearance="?android:textAppearanceSmall"
        android:gravity="center_vertical"
        android:padding="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_object_street_min_height"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_query_builder_black_24dp"/>
    <TextView
        android:id="@+id/object_info1_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_object_street_min_height"
        tools:text="Polish cuisine"
        android:padding="12dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:gravity="center_vertical"/>
   </LinearLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_marginBottom="16dp"/>

</LinearLayout>